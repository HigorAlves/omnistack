{
  "name": "omnistack",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*",
    "stacks/*"
  ],
  "scripts": {
    "build": "bash ./scripts/build.sh",
    "dev": "bash ./scripts/dev.sh",
    "clean": "bash ./scripts/clean.sh",
    "lint": "bash ./scripts/lint.sh",
    "lint:ci": "bash ./scripts/lint-ci.sh",
    "audit": "bash ./scripts/security-audit.sh",
    "audit:env": "bash ./scripts/environment-audit.sh",
    "audit:commit": "bash ./scripts/branch-audit.sh",
    "prepare:env": "bash ./scripts/husky.sh",
    "release": "yarn run standard-version",
    "release:major": "yarn release -- --release-as major",
    "release:minor": "yarn release -- --release-as minor",
    "release:patch": "yarn release -- --release-as patch",
    "release:alpha": "yarn release -- --prerelease alpha",
    "release:beta": "yarn run release -- --prerelease beta",
    "snapshot": "solidarity snapshot"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "eslint-config-custom": "*",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "solidarity": "^3.0.4",
    "standard-version": "^9.5.0",
    "turbo": "latest",
    "validate-branch-name": "^1.3.0",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}

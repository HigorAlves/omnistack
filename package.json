{
  "name": "omnistack",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*",
    "stacks/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "validate": "turbo run lint && yarn format",
    "validate:env": "solidarity",
    "release": "yarn run standard-version",
    "release:major": "yarn release -- --release-as major",
    "release:minor": "yarn release -- --release-as minor",
    "release:patch": "yarn release -- --release-as patch",
    "release:alpha": "yarn release -- --prerelease alpha",
    "release:beta": "yarn run release -- --prerelease beta",
    "prepare:husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged && npx validate-branch-name\" && npx husky add .husky/pre-push \"yarn run validate\" && npx husky add .husky/commit-msg \"npx commitlint --edit $1\"",
    "snapshot": "solidarity snapshot"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "eslint-config-custom": "*",
    "lint-staged": "^13.1.2",
    "prettier": "latest",
    "pretty-quick": "^3.1.3",
    "solidarity": "^3.0.4",
    "standard-version": "^9.5.0",
    "turbo": "latest",
    "validate-branch-name": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
